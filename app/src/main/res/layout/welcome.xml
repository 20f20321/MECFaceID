<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/choose_role_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Role:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/btn_student"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="I'm Student"
            android:backgroundTint="#64B6DB"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_faculty"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="I'm Faculty"
            android:backgroundTint="#64B6DB"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_employee"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="I'm Employee"
            android:backgroundTint="#64B6DB"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
